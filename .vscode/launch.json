    "version": "0.2.0",
    "configurations": [
        {   
            "name": "Launch Chrome with npm",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8880",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "npm: dev",
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true
          }
    ]
}